# vim:filetype=yaml

machine:
  kubelet:
    extraArgs:
      feature-gates: CronJobTimeZone=true,GracefulNodeShutdown=true
      rotate-server-certificates: "true"
  time:
    disabled: false
    servers:
      - time.milton.mcf.io

cluster:
  network:
    podSubnets:
      - ${podSubnet}
    serviceSubnets:
      - ${serviceSubnet}
    cni:
      name: none
  extraManifests:
    - "https://raw.githubusercontent.com/mologie/talos-vmtoolsd/master/deploy/unstable.yaml"
  proxy:
    disabled: true
